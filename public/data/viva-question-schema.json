{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Viva Questions Schema",
  "description": "Schema for viva questions organized by units",
  "type": "object",
  "properties": {
    "units": {
      "type": "array",
      "description": "Array of units containing viva questions",
      "items": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "Unit title"
          },
          "vivaQuestions": {
            "type": "array",
            "description": "Array of viva questions for this unit",
            "items": {
              "type": "object",
              "properties": {
                "question": {
                  "type": "string",
                  "description": "The viva question"
                },
                "answer": {
                  "type": "string",
                  "description": "The answer to the viva question"
                },
                "tags": {
                  "type": "array",
                  "description": "Tags associated with the question",
                  "items": {
                    "type": "string"
                  }
                },
                "source": {
                  "type": "string",
                  "description": "Source of the question (e.g., syllabus, out_of_syllabus)",
                  "enum": ["syllabus", "out_of_syllabus"]
                },
                "difficulty": {
                  "type": "string",
                  "description": "Difficulty level of the question",
                  "enum": ["easy", "medium", "hard"]
                }
              },
              "required": ["question", "answer", "tags", "source", "difficulty"]
            }
          }
        },
        "required": ["title", "vivaQuestions"]
      }
    }
  },
  "required": ["units"]
}